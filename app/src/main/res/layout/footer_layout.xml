<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <androidx.cardview.widget.CardView android:layout_width="363dp" android:layout_height="120dp" android:layout_gravity="center">
        <androidx.core.widget.ContentLoadingProgressBar
                android:layout_width="match_parent"
                android:id="@+id/progress_bar"
                style="?android:attr/progressBarStyleSmall"
                android:layout_height="60dp">
        </androidx.core.widget.ContentLoadingProgressBar>
        <TextView android:layout_width="match_parent" android:layout_height="60dp"
        android:id="@+id/load_description">

        </TextView>
    </androidx.cardview.widget.CardView>
</FrameLayout>